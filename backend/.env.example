# 環境設定
ENVIRONMENT=development

# アプリケーション設定
APP_NAME=ナレッジ投稿システム
APP_VERSION=2.0.0
DEBUG=true

# ロギング設定
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=logs/knowledge_service.log

# データベース設定
DATABASE_URL=sqlite+aiosqlite:///./knowledge.db
SQLALCHEMY_ECHO=true

# セキュリティ設定
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS設定
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ページネーション設定
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000
